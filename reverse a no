#include <stdio.h>

int main() {
    int num, reversed = 0, remainder;

    printf("Enter an integer: ");
    scanf("%d", &num);

    while (num != 0) {
        remainder = num % 10;              // Get the last digit
        reversed = reversed * 10 + remainder; // Add it to reversed
        num /= 10;                         // Remove the last digit
    }

    printf("Reversed number = %d\n", reversed);

    return 0;
}
